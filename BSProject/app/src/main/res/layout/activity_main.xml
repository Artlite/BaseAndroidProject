<?xml version="1.0" encoding="utf-8"?>
<com.artlite.bslibrary.ui.view.BSDraggableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.artlite.bsproject.MainActivity">

    <com.artlite.bslibrary.ui.fonted.BSTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <com.artlite.bslibrary.ui.fonted.BSEditText
        android:id="@+id/edit_popup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bs_material2_square"
        android:hint="Input text here"
        android:padding="@dimen/dimen_15"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <com.artlite.bslibrary.ui.fonted.BSCurrencyEditText
        android:id="@+id/edit_currency"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bs_material2_square"
        android:padding="@dimen/dimen_15"
        app:currencyTextSize="16sp" />

    <com.artlite.bslibrary.ui.fonted.BSButton
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bs_background_card"
        android:text="Just do it"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.artlite.bslibrary.ui.fonted.BSButton
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bs_background_card"
        android:text="Show pop up"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.artlite.bslibrary.ui.fonted.BSButton
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bs_background_card"
        android:text="Pick image"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.artlite.bslibrary.ui.fonted.BSButton
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bs_background_card"
        android:text="Show tags"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.artlite.bslibrary.ui.fonted.BSButton
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bs_background_card"
        android:text="Show PDF"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.artlite.bslibrary.ui.view.BSImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</com.artlite.bslibrary.ui.view.BSDraggableLinearLayout>
