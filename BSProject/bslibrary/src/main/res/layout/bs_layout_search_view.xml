<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/image_search"
        style="@style/styleFillImageCenter"
        android:layout_width="@dimen/dimen_25"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:src="@drawable/bs_ic_search" />

    <com.artlite.bslibrary.ui.fonted.BSEditText
        android:id="@+id/edit_search"
        android:layout_width="@dimen/dimen_0"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:layout_weight="1"
        android:clickable="false"
        android:enabled="false"
        android:gravity="center_vertical|left"
        android:hint="Enter search query"
        android:imeOptions="actionSearch"
        android:lines="1"
        android:minHeight="@dimen/dimen_40"
        android:singleLine="true"
        android:textSize="@dimen/text_16" />

    <ImageView
        android:id="@+id/image_close"
        style="@style/styleFillImageCenter"
        android:layout_width="@dimen/dimen_20"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_5"
        android:layout_marginRight="@dimen/dimen_5"
        android:src="@drawable/bs_ic_close" />

</LinearLayout>